<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingHorizontal="24dp">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_left_dark"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_product_item_logo"
        android:layout_width="@dimen/splash_width"
        android:layout_height="@dimen/splash_width"
        android:layout_below="@+id/rl_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin" />

    <TextView
        android:id="@+id/tv_product_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_product_item_logo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/price"
        android:textStyle="bold"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_product_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_product_item_logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin"
        android:textColor="@color/black"
        android:textSize="@dimen/price"
        android:textStyle="bold"
        tools:text="10.0$" />

    <TextView
        android:id="@+id/tv_product_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_item_price"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam" />
</RelativeLayout>
